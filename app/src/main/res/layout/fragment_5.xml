            <!--            tools:layout_editor_absoluteX="25dp">-->

            <!--        </ScrollView>-->

            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="356dp"
                android:layout_height="597dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                android:columnCount="2"
                android:rowCount="2"
                tools:ignore="ExtraText"
                tools:layout_editor_absoluteX="25dp">

                <ImageButton
                    android:id="@+id/button1"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="30sp"
                    android:background="@drawable/round_background"
                    android:backgroundTint="@color/red"
                    android:contentDescription="Home Camera button"
                    android:padding="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/cctv"
                    android:text="Home Cam"
                    android:textSize="18sp"
                    app:layout_constraintDimensionRatio="1:1" />

                <ImageButton
                    android:id="@+id/button2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="30sp"
                    android:background="@drawable/round_background"
                    android:backgroundTint="#FF71F0"
                    android:contentDescription="Television button"
                    android:padding="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/television"
                    android:text="Tv"
                    android:textSize="18sp"
                    app:layout_constraintDimensionRatio="1:1" />

                <ImageButton
                    android:id="@+id/button3"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="30sp"
                    android:background="@drawable/round_background"
                    android:backgroundTint="#71B4FF"
                    android:contentDescription="Fridge button"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/fridge"
                    android:text="Fridge"
                    android:textSize="18sp"
                    app:layout_constraintDimensionRatio="1:1" />

                <ImageButton
                    android:id="@+id/button4"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="30sp"
                    android:background="@drawable/round_background"
                    android:backgroundTint="#A5FF71"
                    android:contentDescription="Thermostat button"
                    android:padding="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/thermostat"
                    android:text="Thermostat"
                    android:textSize="18sp"
                    app:layout_constraintDimensionRatio="1:1" />

            </GridLayout>


            <LinearLayout
                android:id="@+id/bottomLayout"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="7dp"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/gridLayout">

                <ImageButton
                    android:id="@+id/button5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="16dp"
                    android:background="@drawable/round_background"
                    android:contentDescription="Add item"
                    android:padding="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/add"
                    android:text="@string/add_item"
                    android:textSize="18sp"
                    app:tint="#222222" />

            </LinearLayout>

        </RelativeLayout>


</FrameLayout>