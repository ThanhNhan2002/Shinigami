<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.widget.ImageButton
                android:id="@+id/button1"
                style="@style/CustomButton2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@drawable/round_background"
                android:contentDescription="Button 1"
                android:padding="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/cctv"
                android:theme="@style/CustomButton2" />

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@drawable/round_background"

                android:contentDescription="Button 2"
                android:padding="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/television" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@drawable/round_background"
                android:backgroundTint="#71B4FF"
                android:contentDescription="Button 3"
                android:padding="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/fridge" />

            <ImageButton
                android:id="@+id/button4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@drawable/round_background"
                android:backgroundTint="#A5FF71"
                android:contentDescription="Button 4"
                android:padding="30dp"
                android:scaleType="fitCenter"
                android:src="@drawable/thermostat" />
        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>

